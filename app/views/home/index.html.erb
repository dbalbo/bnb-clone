<!-- This is the body of the home page and styling for the photos to all be listed as circles on the page -->
<div class="container">
  <div class='heading'>
    <strong> PDX Properteez</strong> 
  </div>
  <h3> Air Conditioning. Toilets.</h3>
   <br><h4>(its Portland, you think you can have <em>both</em>?)<h4>

  <div class='row popular-images'>
    <% @popular_yards[0..1].each do |listing| %>
    <div class='col-md-4 col-md-offset-1'>
      <%= link_to listing_path(listing) do %>
      <%= image_tag listing.image.url(:medium), class: "img-circle popular-image" %>
      <% end %>
    </div>
    <% end %>
  </div>

  <% if @popular_yards.length > 1 %>
  <div class='row popular-images'>
    <% @popular_yards[2..3].each do |listing| %>
      <div class='col-md-4 col-md-offset-1'>
      <%= link_to listing_path(listing) do %>
        <%= image_tag listing.image.url(:medium), class: 'img-circle popular-image' %>
        <% end %>
      </div>
      <% end %>

    </div>
    <% end %>
  </div>

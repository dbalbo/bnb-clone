<%= form_for Listing.new do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :location%>
  <%= f.text_field :location%>
</div>
<div class="form-group">
  <%= f.label :description%>
  <%= f.text_field :description%>
</div>
<div class="form-group">
  <%= f.label :price%>
  <%= f.text_field :price%>
</div>
<div class="form-group">
  <%= f.label :guest_number%>
  <%= f.text_field :guest_number%>
</div>
<!-- These checkboxes need work are only semifunctional at this time -->
<div class="form-group">
  <%= f.label :toilet%>
  <div class="form-group">
    <%= f.label :toilet, "Yes"%>
    <%= f.radio_button :toilet, true%>
    <%= f.label :toilet, "No"%>
    <%= f.radio_button :toilet, false, checked:true%>
  </div>
</div>
<div class="form-group">
  <%= f.label :shower%>
  <div class="form-group">
    <%= f.label :shower, "Yes"%>
    <%= f.radio_button :shower, true%>
    <%= f.label :shower, "No"%>
    <%= f.radio_button :shower, false, checked:true%>
  </div>
</div>
<div class="form-group">
  <%= f.label :outlet%>
  <div class="form-group">
    <%= f.label :outlet, "Yes"%>
    <%= f.radio_button :outlet, true%>
    <%= f.label :outlet, "No"%>
    <%= f.radio_button :outlet, false, checked:true%>
  </div>
</div>
<div class="form-group">
  <%= f.label :pets%>
  <div class="form-group">
    <%= f.label :pets, "Yes"%>
    <%= f.radio_button :pets, true%>
    <%= f.label :pets, "No"%>
    <%= f.radio_button :pets, false, checked:true%>
  </div>
</div>
<div class="form-group">
  <%= f.label :image %>
  <%= f.file_field :image, autocomplete: "off" %>
</div>
<%= f.submit "Submit"%>
<% end %>

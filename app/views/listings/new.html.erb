<%= form_for Listing.new do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='form-group'>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class='form-group'>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class='form-group'>
    <%= f.label :amenity %>
    <%= f.text_field :amenity %>
  </div>

  <%= f.submit 'Submit' %>
  <% end %>
